<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.jellygom.project1.IntroActivity">

    <com.jellygom.view.kbv.KenBurnsView
            android:id="@+id/ken_burns_images"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    <!--
    We use dps for font size: we don't want our logo
    to become larger if user has set larger text in global
    settings-->

    <LinearLayout
            android:id="@+id/LinearLayout1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:orientation="vertical" >

        <TextView
                android:id="@+id/logo"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:alpha="0.0"
                android:background="@mipmap/ic_launcher"
                android:textColor="@android:color/white"
                android:textSize="64dp"
                tools:ignore="SpUsage" />

        <TextView
                android:id="@+id/welcome_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:alpha="0.0"
                android:text="@string/app_name"
                android:textColor="@android:color/white"
                android:textSize="40sp"
                android:textStyle="normal|bold" />

    </LinearLayout>

</RelativeLayout>
